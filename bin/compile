echo "Installing Deno 1.0"

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd "$(dirname "${0:-}")"; cd ..; pwd)

echo "$BUILD_DIR"
echo "$CACHE_DIR"
echo "$ENV_DIR"
echo "$BP_DIR"

cd $BUILD_DIR

curl -fsSL https://deno.land/x/install/install.sh | sh

export DENO_INSTALL="/app/.deno"
export PATH="$DENO_INSTALL/bin:$PATH"

echo "0 : $DENO_INSTALL"
echo "$HOME"
echo "1 : $DENO_INSTALL/bin:$PATH"
echo "By GrayHat"

deno --help

sleep 20